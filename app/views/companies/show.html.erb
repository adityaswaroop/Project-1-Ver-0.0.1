          </tr>
          <tr>
            <td class="td_width"><b>Country:</b></td><td><%= @company.country %></td>
          </tr>
          <tr>
            <td class="td_width"></td>
          </tr>
          <tr>
            <td class="td_width"><b>Alternate No:</b></td><td><%= @company.contact_two %></td>
          </tr>
          <tr>
            <td class="td_width"><b>Alternate Email:</b></td><td><%= @company.email2 %></td>
          </tr>
          <tr>
            <td class="td_width"><b>Website:</b></td><td><%= @company.website %></td>
          </tr>
        </table>
    </td>
  </tr>
</table>


